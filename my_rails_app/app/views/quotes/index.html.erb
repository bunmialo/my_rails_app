<h1>Listing All Bunmi's Quotes</h1>
<%= link_to 'Add new quote', new_quote_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @quotes.each do |quote| %>
    <tr>
      <td><%= quote.title %></td>
      <td><%= quote.text %></td>
      <td><%= link_to 'Show', quote_path(quote) %></td>
      <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
      <td><%= link_to 'Destroy', quote_path(quote),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>